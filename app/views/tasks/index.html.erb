<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th>Description</th>
      <th>Deferred date</th>
      <th>Delegate</th>
      <th>Delegate note</th>
      <th>Complete</th>
      <th>Project</th>
      <th>Context</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.kind %></td>
        <td><%= task.description %></td>
        <td><%= task.deferred_date %></td>
        <td><%= task.delegate %></td>
        <td><%= task.delegate_note %></td>
        <td><%= task.complete %></td>
        <td><%= task.project %></td>
        <td><%= task.context %></td>
        <td><%= task.user %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

